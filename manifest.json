{
  "description": "Simple inline popup blocker that removes most cookie and newsletter popups without blocklist.",
  "manifest_version": 2,
  "name": "Inline Popup Blocker",
  "version": "0.1.5",
  "homepage_url": "https://github.com/otsmr/inline-popup-blocker",
  "icons": {
    "48": "icons/cookie-bite-solid.svg",
    "96": "icons/cookie-bite-solid.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "inline-popup-blocker@oproj.de",
      "strict_min_version": "53.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "browser_style": true,
    "default_title": "No popups found",
    "default_icon": "icons/cookie-solid.svg",
    "pinned": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>",
    "contextMenus"
  ]
}